type Todo {
  id: ID!
  name: String!
  done: Boolean!
  dueDate: String
  description: String
  user: User!
}

input NewTodo {
  name: String!
  userId: String!
  dueDate: String
  description: String
}

input UpdateTodo {
  name: String
  dueDate: String
  description: String
}

extend type Query {
  todos: [Todo!]!
  todo(id: ID!): Todo!
}

extend type Mutation {
  createTodo(input: NewTodo!): Todo!
  updateTodo(input: UpdateTodo!): Todo!
  doneTodo(id: ID!): Todo!
}